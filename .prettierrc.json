{
  "printWidth": 100,
  "tabWidth": 2,
  "useTabs": false,
  "singleQuote": false,
  "trailingComma": "es5",
  "semi": true,
  "endOfLine": "lf",
  "overrides": [
    { "files": "*.html", "options": { "parser": "html" } },
    { "files": "*.css", "options": { "parser": "css" } },
    { "files": "*.js", "options": { "parser": "babel" } }
  ]
}
